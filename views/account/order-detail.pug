extends ../layout.pug

block content
    .layout-info-account
        .title-infor-account.text-center
            h1 T&agrave;i kho&#x1EA3;n c&#x1EE7;a b&#x1EA1;n 
        .container
            .row
            .col-xs-12.col-sm-3.order-detail-section-account
                .AccountSidebar
                    h3.AccountTitle.titleSidebar T&agrave;i kho&#x1EA3;n
                    .AccountContent
                        .AccountList
                            ul.list-unstyled
                                li.current
                                    a(href='/account') Th&ocirc;ng tin t&agrave;i kho&#x1EA3;n
                                li
                                    a(href='/account/orders') Danh s&aacute;ch đơn hàng;
                                li.last
                                    a(href='/account/logout') &Dstrok;&abreve;ng xu&#x1EA5;t
            .col-xs-12.col-sm-9
                .row
                #customer_sidebar.col-xs-12
                    .col-xs-12
                        p.title-detail Th&ocirc;ng tin đơn hàng  000000#{orderId}
                    
                    .clearfix
                #customer_orders.col-xs-12.order-detail-section
                    .order-summary 
                        include ../templates/checkout/sidebar-items.pug
                        include ../templates/checkout/sidebar-total.pug
            style.
                .order-detail-section {
                    position: relative;
                    color: #717171;
                }

                .order-detail-section h2 {
                    color: #323232;
                }

                .order-detail-section:after {
                    content: "";
                    display: block;
                    width: 300%;
                    position: absolute;
                    top: 0;
                    left: -100%;
                    bottom: 0;
                    background: #fafafa;
                    z-index: -1;
                    box-shadow: 0 -1px 0 #e1e1e1 inset;
                }

                .order-detail-section {}

                .order-detail-section.order-summary {}

                .order-detail-section.order-summary .order-summary-sections {}

                .order-detail-section .order-summary .order-summary-sections .order-summary-section {
                    border-top: 1px solid;
                    padding-top: 1.5em;
                    padding-bottom: 1.5em;
                    border-color: #e1e1e1;
                }

                .order-detail-section  .order-summary .order-summary-sections .order-summary-section:first-child {
                    border-top: none;
                }

                .order-detail-section  .order-summary .order-summary-emphasis {
                    font-weight: 500;
                    color: #4b4b4b;
                }

                .order-detail-section  .order-summary .order-summary-small-text {
                    font-size: 0.85714em;
                    color: #969696;
                }

                .order-detail-section  .order-summary .product {}

                .order-detail-section  .order-summary .product:first-child td {
                    padding-top: 0;
                }

                .order-detail-section  .order-summary .product td {
                    padding-top: 1em;
                }

                .order-detail-section  .order-summary .product .product-image {}

                .order-detail-section  .order-summary .product .product-image .product-thumbnail {
                    width: 4.6em;
                    height: 4.6em;
                    border-radius: 8px;
                    background: #fff;
                    position: relative;
                }

                .order-detail-section  .order-summary .product .product-image .product-thumbnail .product-thumbnail-wrapper {
                    width: 100%;
                    height: 100%;
                    position: relative;
                    overflow: hidden;
                    border-radius: 8px;
                }

                .order-detail-section  .order-summary .product .product-image .product-thumbnail .product-thumbnail-wrapper .product-thumbnail-image {
                    position: absolute;
                    top: 0;
                    left: 0;
                    right: 0;
                    bottom: 0;
                    max-width: 100%;
                    max-height: 100%;
                    margin: auto;
                }

                .order-detail-section  .order-summary .product .product-image .product-thumbnail .product-thumbnail-quantity {
                    font-size: 0.85714em;
                    font-weight: 500;
                    white-space: nowrap;
                    padding: 0.15em 0.65em;
                    border-radius: 2em;
                    background-color: rgba(153, 153, 153, 0.9);
                    color: #fff;
                    position: absolute;
                    right: -0.75em;
                    top: -0.75em;
                    z-index: 2;
                }

                .order-detail-section  .order-summary .product .product-image .product-thumbnail::after {
                    content: '';
                    display: block;
                    position: absolute;
                    top: 0;
                    left: 0;
                    bottom: 0;
                    right: 0;
                    border-radius: 8px;
                    box-shadow: 0 0 0 1px rgba(0, 0, 0, 0.1) inset;
                }

                .order-detail-section  .order-summary .product .product-description {
                    width: 100%;
                }

                .order-detail-section  .order-summary .product .product-description .product-description-name,
                .order-detail-section  .order-summary .product .product-description .product-description-variant,
                .order-detail-section  .order-summary .product .product-description .product-description-property {
                    display: block;
                }

                .order-detail-section  .order-summary .product .product-quantity {}

                .order-detail-section  .order-summary .product .product-price {
                    white-space: nowrap;
                }

                .order-detail-section .btn-disabled {
                    cursor: default;
                    background: #c8c8c8;
                    box-shadow: none;
                }