header#site-header.main-header
    .header-mid.wrap-flex-align
        // <div class="visible-lg visible-md col-header-mid"></div>
        .wrap-logo
            a(href="/")
                img.img-responsive.logoimg(src=pageInfo.logo)
        .menu-desktop.hidden-sm.hidden-xs
            #nav
                nav.main-nav.text-center
                    ul.clearfix
                        li
                            a(href='/' title='Trang chủ')
                                | Trang chủ

                        //li
                        //    a.menu-sanpham(href='/san-pham' title='Sản phẩm')
                        //        | Sản phẩm
                        if pageCategories && pageCategories.length > 0
                            each category in pageCategories
                                li
                                    a(href=fn.linkCategoryIdList(category.slug) title=category.name)
                                        | #{ category.name }
                                        if category && category.child && category.child.length > 0
                                            i.fa.fa-angle-down(aria-hidden='true')
                                    if category && category.child && category.child.length > 0
                                        ul.submenu.clearfix
                                            .col-xs-12.col-sm-3.item-submenu.title-collections
                                                // Level 1
                                                ul
                                                    each child in category.child
                                                        li
                                                            a(href=fn.linkCategoryIdList(child.slug) title=child.name)
                                                                | #{ child.name }

                                            .col-xs-12.col-sm-9
                                                each child in category.child
                                                    .col-sm-4
                                                        .box-des
                                                            .box-des-img
                                                                a(href=fn.linkCategoryIdList(child.slug) title=child.name)
                                                                    img(src=child.avatar alt=child.name)
                                                            .box-des-title
                                                                a(href=fn.linkCategoryIdList(child.slug) title=child.name)
                                                                    | #{ child.name }

                        li
                            a.menu-menu(href=fn.linkSaleProduct() title='Khuyến mãi')
                                | Sale
                        li
                            a(href=fn.linkSaleProduct() title='Blog')
                                | Blog
                        li
                            a.menu-cshd(href='javascript:void' title='Chính sách - Hướng dẫn')
                                | Ch&iacute;nh s&aacute;ch - H&#x1B0;&#x1EDB;ng d&#x1EAB;n
                                i.fa.fa-chevron-down(aria-hidden='true')
                            if policies && policies.length > 0
                                ul.sub_menu
                                    each policy in policies
                                        li
                                            a(href=fn.linkIdPolicyAndReturn(policy.post_slug) title=policy.post_name)
                                                | #{ policy.post_name }

                        li
                            a(href='/gioi-thieu' title='Giới thiệu')
                                | Giới thiệu
                        //li
                        //    a(href='/account/orders' title='Kiểm tra đơn hàng')
                        //        | Ki&#x1EC3;m tra &dstrok;&#x1A1;n h&agrave;ng
